<Window x:Class="SystemWPF_DZ.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:SystemWPF_DZ"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="130*"/>
            <ColumnDefinition Width="130*"/>
            <ColumnDefinition Width="130*"/>
            <ColumnDefinition Width="130*"/>
            <ColumnDefinition Width="130*"/>
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition Height="4*"/>
            <RowDefinition Height="27*"/>
        </Grid.RowDefinitions>
        <ComboBox>
            <Button Content="Диспечер Задачь" Width="150" Click="TaskMNG_Click"/>
            <Button Content="Gimp" Width="150" Click="Gimp_Click"/>
            <Button Content="Note" Width="150" Click="Note_Click"/>
        </ComboBox>
        <ListBox x:Name="InfoLB" Grid.Row="1" Grid.ColumnSpan="2"/>
        <ListBox x:Name="CurretProcessLB" Grid.Row="1" Grid.Column="3" Grid.ColumnSpan="2"/>
        <Button x:Name="StopProcessBTN" Grid.Column="3" Content="Остановить" Click="StopProcessBTN_Click"/>
        
    </Grid>
</Window>
